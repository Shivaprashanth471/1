<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#132a34</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
    </style>
    <!-- Configuration for Dialog.theme. -->
    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <!-- BackgroundColor of the date modal -->
        <item name="colorPrimary">#28D1C5</item>
        <item name="colorAccent">#28D1C5</item>
        <item name="android:textColor">#132a34</item>
        <!-- Change textColor of the date modal -->
        <item name="android:textColorPrimary">#132a34</item>
    </style>

</resources>



